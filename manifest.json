{
  "manifest_version": 3,
  "name": "Bitcoin Price Tracker",
  "version": "1.2",
  "description": "Displays the current Bitcoin price (in USD or EUR)",
  "permissions": ["alarms", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}
